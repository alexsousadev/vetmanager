generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario    Int         @id @default(autoincrement())
  cpf_usuario   String         @unique
  nome_usuario  String
  email_usuario String      @unique
  senha_usuario String
  Avaliacao     Avaliacao[]
  Pet           Pet[]
}

model Pet {
  id_pet            Int     @id @default(autoincrement())
  nome_pet          String
  especie           String
  raca              String
  peso              Float
  id_usuario        Usuario @relation(fields: [usuarioId_usuario], references: [id_usuario])
  usuarioId_usuario Int
}

model Clinica {
  id_clinica        Int         @id @default(autoincrement())
  nome_clinica      String
  endereco_clinica  String
  telefone_clinica  String
  foto_clinica      String
  avaliacao_clinica String
  total_avaliacoes  Int
  Avaliacao         Avaliacao[]
}

model Servico {
  id_servico        Int    @id @default(autoincrement())
  nome_servico      String
  descricao_servico String
  preco_servico     Float
}

model Avaliacao {
  id_avaliacao         Int      @id @default(autoincrement())
  nota_avaliacao       Int
  comentario_avaliacao String
  data_avaliacao       DateTime
  id_clinica           Clinica  @relation(fields: [clinicaId_clinica], references: [id_clinica])
  id_usuario           Usuario  @relation(fields: [usuarioId_usuario], references: [id_usuario])
  clinicaId_clinica    Int
  usuarioId_usuario    Int
}
